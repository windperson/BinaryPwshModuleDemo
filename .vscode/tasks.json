    "version": "2.0.0",
    "tasks": [
        {
           "label": "build netstandard module",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/PwshStandardModule/PwshStandardModule.csproj",
